# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=mosar-graphrag

# OpenAI API
OPENAI_API_KEY=sk-your-key-here
OPENAI_ORG_ID=org-your-org-id  # Optional

# LangSmith (Optional - for debugging)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls-your-key-here
LANGCHAIN_PROJECT=mosar-graphrag

# Application Settings
LOG_LEVEL=INFO
CACHE_ENABLED=true
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# LLM Configuration
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Advanced Features (Phase 5)
USE_TEXT2CYPHER=true  # Enable LLM-based Text2Cypher generation
HITL_ENABLED=false    # Enable Human-in-the-Loop review
STREAMING_ENABLED=false  # Enable streaming responses (Phase 5)
